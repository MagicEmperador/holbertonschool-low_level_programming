#include "main.h"

/**
 * print_line - draws a traight line in the terminal
 * @n: number of times the character '_' should be printed
 */

void print_line(int n)
{
	if (n <= 0)
	{
		_putchar('\n');
	}
	else if
	{
		int i;

		if (i = 1 ; i <= n; i++)
		{
			_putchar('_');
		}
		_putchar('\n');
	}
}
